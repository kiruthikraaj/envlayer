{
  "name": "envlayer",
  "version": "0.3.0",
  "description": "Tiny convention-driven env loader for Node/TypeScript (layered .env resolution + safe logs)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiruthikraaj/envlayer.git"
  },
  "type": "module",
  "bin": {
    "envlayer": "./dist/cli.cjs"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js",
      "require": "./dist/register.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/register.ts src/cli.ts --format esm,cjs --dts --clean --tsconfig tsconfig.build.json",
    "test": "npm run build && node --test",
    "bench": "npm run build && node bench/compare.mjs",
    "prepublishOnly": "npm run test && npm run build"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "dotenv": "^17.3.1",
    "dotenv-flow": "^4.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "env",
    "dotenv",
    "configuration",
    "node",
    "typescript",
    "environment-variables",
    "layered-env"
  ]
}
